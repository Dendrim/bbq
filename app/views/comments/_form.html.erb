<%= form_for [@event, comment] do |form| %>
  <%= render partial: 'partials/form_errors', locals: { model: comment }%>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control' %>
  </div>

  <% unless user_signed_in? %>
    <div class="form-group">
      <%= form.label t('views.comments.user_name') %>
      <%= form.text_field :user_name, class: 'form-control' %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit t('views.comments.submit'), class: 'btn btn-primary'%>
  </div>
<% end %>
