<%= form_for [@event, subscription] do |form|  %>
  <%= render partial: 'partials/form_errors', locals: {model: subscription} %>

  <% unless user_signed_in? %>
    <div class="form-group" >
      <%= form.label t('views.subscriptions.user_name') %>
      <%= form.text_field :user_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label t('views.subscriptions.user_email') %>
      <%= form.text_field :user_email, class: 'form-control' %>
    </div>
  <% end %>

  <% if current_user != @event.user %>
    <div class="actions">
      <%= form.submit t('views.subscriptions.subscribe'), class: 'btn btn-primary', data: { turbo_frame: "subscription_form" } %>
    </div>
  <% end %>
<% end %>
